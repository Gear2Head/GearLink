{
    "name": "gearlink",
    "version": "1.0.0",
    "private": true,
    "description": "Production-ready WhatsApp-like messaging application",
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=8.0.0"
    },
    "scripts": {
        "dev:all": "concurrently \"pnpm:dev:*\"",
        "dev:auth": "pnpm --filter @gearlink/auth-service dev",
        "dev:user": "pnpm --filter @gearlink/user-service dev",
        "dev:chat": "pnpm --filter @gearlink/chat-service dev",
        "dev:media": "pnpm --filter @gearlink/media-service dev",
        "dev:notification": "pnpm --filter @gearlink/notification-service dev",
        "dev:worker": "pnpm --filter @gearlink/worker-media dev",
        "dev:mobile": "pnpm --filter @gearlink/mobile start",
        "dev:web": "pnpm --filter @gearlink/web dev",
        "build:all": "pnpm -r --filter './apps/*' build",
        "build:backend": "pnpm -r --filter './apps/!(mobile|web)' build",
        "build:frontend": "pnpm -r --filter './apps/{mobile,web}' build",
        "test": "pnpm test:unit && pnpm test:integration",
        "test:unit": "jest --config jest.config.js --coverage",
        "test:integration": "jest --config jest.integration.config.js",
        "test:e2e": "pnpm --filter @gearlink/web test:e2e && pnpm --filter @gearlink/mobile test:e2e",
        "test:load": "k6 run tests/load/scenarios/basic-messaging.js",
        "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
        "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
        "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "prisma:generate": "pnpm --filter @gearlink/prisma generate",
        "prisma:migrate": "pnpm --filter @gearlink/prisma migrate:dev",
        "prisma:migrate:deploy": "pnpm --filter @gearlink/prisma migrate:deploy",
        "prisma:seed": "pnpm --filter @gearlink/prisma seed",
        "prisma:studio": "pnpm --filter @gearlink/prisma studio",
        "docker:build": "docker-compose -f docker-compose.build.yml build",
        "docker:push": "docker-compose -f docker-compose.build.yml push",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "infra:up": "docker-compose -f docker-compose.infra.yml up -d",
        "infra:down": "docker-compose -f docker-compose.infra.yml down"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.6",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "@nestjs/cli": "^10.3.0"
    },
    "dependencies": {},
    "workspaces": [
        "apps/*",
        "libs/*"
    ]
}